<Page x:Class="DEStore.Pages.NewEmployee"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DEStore.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="NewEmployee">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="100">
            <TextBlock Text="Login" TextAlignment="Center"/>
            <TextBox x:Name="TBLogin"/>
            
            <TextBlock Text="Name" TextAlignment="Center"/>
            <TextBox x:Name="TBName"/>
            <TextBlock Text="Number" TextAlignment="Center"/>
            <TextBox x:Name="TBNumber"/>
            <TextBlock Text="Password" TextAlignment="Center"/>
            <TextBox x:Name="TBPassword"/>
            <Button Margin="5" Content="New employee" x:Name="BCreateEmployee" Click="BCreateEmployee_Click"/>
            <Button Margin="5" Content="Back" x:Name="Back" Click="Back_Click"/>
        </StackPanel>
    </Grid>
</Page>
