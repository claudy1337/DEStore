<Page x:Class="DEStore.Pages.Products"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DEStore.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Products">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="100">
            
            <Button Margin="5" Content="Add Products" x:Name="BAddProducts" Click="BAddProducts_Click" />
            <Button Margin="5" Content="Stock Products" x:Name="BInStockProducts" Click="BInStockProducts_Click"/>
            <Button Margin="5" Content="Delete Products" x:Name="BDeleteProducts" Click="BDeleteProducts_Click"/>
            <Button Margin="5" Content="Back" x:Name="Back" Click="Back_Click"/>
        </StackPanel>
    </Grid>
</Page>
