<Page x:Class="DEStore.Pages.AddProducts"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DEStore.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddProducts">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="100">
            <TextBlock Text="Name" TextAlignment="Center"/>
            <TextBox x:Name="TBName"/>
            <TextBlock Text="Price" TextAlignment="Center"/>
            <TextBox x:Name="TBPrice"/>

            <TextBlock Text="Amount" TextAlignment="Center"/>
            <TextBox x:Name="TBAmount"/>
            <Button Margin="5" Content="Add" x:Name="Add" Click="Add_Click"/>
            <Button Margin="5" Content="Back" x:Name="Back" Click="Back_Click"/>
        </StackPanel>
    </Grid>
</Page>
