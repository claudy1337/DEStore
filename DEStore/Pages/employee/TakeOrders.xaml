<Page x:Class="DEStore.Pages.employee.TakeOrders"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DEStore.Pages.employee"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="TakeOrders">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="100">
            <TextBlock Text="Сode" TextAlignment="Center"/>
            <TextBox x:Name="TBCode"/>

            <Button Margin="5" Content="Check order" x:Name="BCheckOrder" Click="BCheckOrder_Click"/>
            <Button Margin="5" Content="Back" x:Name="Back" Click="Back_Click"/>
        </StackPanel>
    </Grid>
</Page>
