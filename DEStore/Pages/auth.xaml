<Page x:Class="DEStore.Pages.auth"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DEStore.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="auth">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="100">
            <TextBlock Text="Login" TextAlignment="Center"/>
            <TextBox x:Name="TBLogin"/>
            <TextBlock Text="Password" TextAlignment="Center"/>
            <PasswordBox x:Name="TBPassword"/>

            <TextBlock Text="Number" TextAlignment="Center"/>
            <TextBox x:Name="TBNumber"/>
            <Button Margin="5" Content="sign in " x:Name="BSignIn" Click="BSignIn_Click"/>
            <Button Margin="5" Content="sign up " x:Name="BSignUp" Click="BSignUp_Click"/>
        </StackPanel>
    </Grid>
</Page>
